{
    "appId": "com.verteilen.app",
    "productName": "Verteilen",
    "compression": "maximum",
    "directories": {
        "output": "dist"
    },
    "win": {
        "target": "msi",
        "icon": "src/renderer/assets/icon.png"
    },
    "msi": {
        "runAfterFinish": false
    },
    "linux":  {
        "target": "deb",
        "maintainer": "Elly"
    },
    "extraFiles": [
        "README.md",
        "docs/",
        "bin/"
    ],
    "files": [
        {
            "from": "build/main",
            "to": "main",
            "filter": ["**/*"]
        },
        {
            "from": "build/renderer",
            "to": "renderer",
            "filter": ["**/*"]
        },
        {
            "from": "src/main/static",
            "to": "static",
            "filter": ["**/*"]
        },
        "!bin",
        "!src",
        "!data",
        "!.git",
        "!.github",
        "!build",
        "!dist",
        "!docs",
        "!util",
        "!scripts",
        "!record.json",
        "!preference.json",
        "!log.json",
        "!node_modules/express"
    ]
}
